{
    "name": "encode-data",
    "description": "Represents message to encode data.",
    "fields": [
        {
            "name": "data",
            "type": "uints",
            "description": "The data to be encoded."
        },
        {
            "name": "encodingAlgorithm",
            "type": "string",
            "description": "The algorithm used for encoding."
        },
        {
            "name": "dataSize",
            "type": "uint",
            "description": "The size of the data."
        },
        {
            "name": "checksum",
            "type": "string",
            "description": "The checksum for data integrity."
        },
        {
            "name": "version",
            "type": "uint",
            "description": "The version of the encoding format."
        }
    ],
    "response": {
        "fields": [
            {
                "name": "encodedDataID",
                "type": "uint",
                "description": "The unique identifier for the encoded data."
            },
            {
                "name": "encodingProof",
                "type": "uints",
                "description": "Proof of encoding."
            },
            {
                "name": "blockNumber",
                "type": "uint",
                "description": "The block number when the encoding occurred."
            }
        ]
    }
}
